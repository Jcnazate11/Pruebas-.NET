@model CRUD_PostgreSQL.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2 class="mb-4">Confirmar Eliminación</h2>

<div class="container">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Eliminar Cliente</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">¿Estás seguro de que deseas eliminar este cliente?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Cedula)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cedula)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Apellidos)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombres)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombres)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Mail)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Mail)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Codigo" />
                    <button type="submit" class="btn btn-danger" id="btnEliminarD">Eliminar</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>
