@model WebApplicationLab.Models.Cliente
@{
    ViewData["Title"] = "Editar";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Editar Cliente</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<form id="quickForm" asp-action="Edit">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Editar Cliente</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="Codigo" />
                    <div class="form-group">
                        <label asp-for="Cedula">Cédula</label>
                        <input asp-for="Cedula" class="form-control" maxlength="10">
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellidos">Apellidos</label>
                        <input asp-for="Apellidos" class="form-control" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombres">Nombres</label>
                        <input asp-for="Nombres" class="form-control" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Mail">Mail</label>
                        <input asp-for="Mail" type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Direccion">Dirección</label>
                        <input asp-for="Direccion" class="form-control" maxlength="200">
                    </div>
                    <div class="form-group">
                        <label asp-for="Provincia">Provincia</label>
                        <select asp-for="Provincia" class="form-control" asp-items="ViewBag.Provincias">
                            <option value="">Seleccione una provincia</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SaldoCuenta">Saldo de la Cuenta</label>
                        <input asp-for="SaldoCuenta" class="form-control">
                    </div>
                    <div class="form-check">
                        <input asp-for="Estado" class="form-check-input">
                        <label class="form-check-label" asp-for="Estado">Activo</label>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success btn-sm" id="btnEditarCliente" name="EditarCliente>
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index"><< Regresar</a>
        </div>
    </section>
</form>
